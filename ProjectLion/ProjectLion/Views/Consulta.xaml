<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectLion.Views.Consulta"
             xmlns:xuni="clr-namespace:Xuni.Forms.FlexGrid;assembly=Xuni.Forms.FlexGrid"
             Title="Consulta Rapida">
    <StackLayout x:Name="contenedorMulta" VerticalOptions="FillAndExpand">
        <StackLayout Orientation="Horizontal">
            <Label FontSize="Medium" VerticalTextAlignment="Center">Busca</Label>
            <Entry x:Name="txtBuscar" HorizontalOptions="FillAndExpand" />
        </StackLayout>
        <xuni:FlexGrid x:Name="grid" AutoGenerateColumns="False" VerticalOptions="FillAndExpand" IsReadOnly="True">
            <xuni:FlexGrid.Behaviors>
                <xuni:FullTextFilterBehavior FilterEntry="{x:Reference Name=txtBuscar}" Mode="WhileTyping" MatchNumbers="True" TreatSpacesAsAndOperator="True" />
                <xuni:FlexGridDetailProvider x:Name="details" Height="170">
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Propietario:"/>
                            <Label Text="{Binding Propietario}" Grid.Column="1"/>
                            <Label Text="Placa:" Grid.Row="1"/>
                            <Label Text="{Binding Placa}" Grid.Row="1" Grid.Column="1"/>
                            <Label Text="Fecha:" Grid.Row="2"/>
                            <Label Text="{Binding Fecha}" Grid.Row="2" Grid.Column="1"/>
                            <Label Text="Direccion:" Grid.Row="3"/>
                            <Label Text="{Binding Direccion}" Grid.Row="3" Grid.Column="1"/>
                            <Label Text="Plazo:" Grid.Row="4"/>
                            <Label Text="{Binding Plazo}" Grid.Row="4" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </xuni:FlexGridDetailProvider>
            </xuni:FlexGrid.Behaviors>
            <xuni:FlexGrid.Columns>
                <xuni:GridColumn Binding="Placa" Width="75"/>
                <xuni:GridColumn Binding="Propietario" Width="*"/>
                <xuni:GridColumn Binding="Fecha" Format="d" Width="85"/>
            </xuni:FlexGrid.Columns>
        </xuni:FlexGrid>
    </StackLayout>
</ContentPage>